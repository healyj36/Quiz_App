<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.healyj36.quizapp" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.USE_CREDENTIALS" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/logo"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >

        <activity android:name=".MainActivity"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ViewQuestion"
            android:label="View Question"
            android:theme="@style/AppTheme" >
        </activity>
        <activity
            android:name=".AllQuestions"
            android:label="All Questions"
            android:theme="@style/AppTheme" >
        </activity>
        <activity
            android:name=".InfiniteGame"
            android:label="Infinite Game Mode"
            android:theme="@style/AppTheme" >
        </activity>
        <activity
            android:name=".InfiniteModeStart"
            android:label="Infinite Game Mode"
            android:theme="@style/AppTheme" >
        </activity>
        <activity
            android:name=".OnlineStart"
            android:label="1v1 Game Mode"
            android:theme="@style/AppTheme"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".ServerActivity"
            android:label="&quot;Server&quot;"
            android:theme="@style/AppTheme">
        </activity>
        <activity
            android:name=".ClientActivity"
            android:label="&quot;Client&quot;"
            android:theme="@style/AppTheme">
        </activity>
        <activity
            android:name=".ChatRoom"
            android:label="Chat Room"
            android:theme="@style/AppTheme">
        </activity>
        <activity
            android:name=".HostGame"
            android:label="Host Game - 1v1 Game Mode"
            android:theme="@style/AppTheme"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".JoinGame"
            android:label="Join Game - 1v1 Game Mode"
            android:theme="@style/AppTheme"
            android:screenOrientation="portrait">
        </activity>

        <meta-data android:name="com.google.android.gms.games.APP_ID"
            android:value="@string/app_id" />
    </application>

</manifest>
